<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84DA9C"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Img_Dice"
        android:layout_width="225dp"
        android:layout_height="205dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"
        app:layout_goneMarginBottom="125dp"
        tools:srcCompact="@drawable.dice1" />

    <Button
        android:id="@+id/Roll_Button"
        android:layout_width="93dp"
        android:layout_height="66dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:background="#3949AB"
        android:padding="15dp"
        android:text="@string/roll"
        android:textAllCaps="true"
        android:textColor="#D4EAD4"
        android:textColorLink="#3949AB"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/Img_Dice"
        app:layout_constraintTop_toBottomOf="@id/Img_Dice" />

</androidx.constraintlayout.widget.ConstraintLayout>